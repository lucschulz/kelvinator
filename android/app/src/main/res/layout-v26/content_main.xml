<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/lay_TopLeftPane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay_ValueToConvert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtValueToBeConverted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txtValueToBeConverted"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/txtInputTemp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:autofillHints="Enter the temperature to convert."
                    android:ems="10"
                    android:inputType="numberDecimal" tools:targetApi="o"
                    tools:ignore="LabelFor" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_Results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtResults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txtHeader_Results"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtResult_C"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="@dimen/lay_weight_conversion_result"
                        android:text="@string/txtResult_C"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/txtSize_results" />

                    <TextView
                        android:id="@+id/txtUnitC"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="@dimen/lay_weight_unit_notation"
                        android:text="@string/txtUnitNotation_C"
                        android:textSize="@dimen/txtSize_results" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtResult_F"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="@dimen/lay_weight_conversion_result"
                        android:text="@string/txtResult_F"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/txtSize_results" />

                    <TextView
                        android:id="@+id/txtUnitF_F"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="@dimen/lay_weight_unit_notation"
                        android:text="@string/txtUnitNotation_F"
                        android:textSize="@dimen/txtSize_results" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtResult_K"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="@dimen/lay_weight_conversion_result"
                        android:text="@string/txtResult_F"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/txtSize_results" />

                    <TextView
                        android:id="@+id/txtUnitNotation_K"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="@dimen/lay_weight_unit_notation"
                        android:text="@string/radKelvin"
                        android:textSize="@dimen/txtSize_results" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_InputUnits"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtHeader_SelectUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_an_input_temperature_unit"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/rGroup_Units"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radCelsius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/radCelsius" />

                <RadioButton
                    android:id="@+id/radFahrenheit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/radFahrenheit" />

                <RadioButton
                    android:id="@+id/radKelvin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/radKelvin" />

            </RadioGroup>


        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>