<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ca.tesscorp.kelvinator">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="ca.tesscorp.kelvinator.Distances"
            android:label="@string/title_activity_distances"
            android:parentActivityName="ca.tesscorp.kelvinator.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.tesscorp.kelvinator.MainActivity" />
        </activity>
        <activity
            android:name="ca.tesscorp.kelvinator.About"
            android:label="@string/title_activity_about"
            android:parentActivityName="ca.tesscorp.kelvinator.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.tesscorp.kelvinator.MainActivity" />
        </activity>
        <activity
            android:name="ca.tesscorp.kelvinator.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>